@model PensionManagementMVC.Models.LoginVerification

@{
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<hr />
<div class="container" style="margin-top:250px">
    <div class="row">
        <div class="col-md-4">
            <div class="card" style="padding:20px">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AadhaarNo" class="control-label"></label>
                        <input asp-for="AadhaarNo" class="form-control" />
                        <span asp-validation-for="AadhaarNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    @if (ViewBag.LoginError != null)
                    {
                <span class="text-danger">@ViewBag.LoginError</span>
                    }
                    <div class="form-group">
                        <input type="submit" value="Next" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


