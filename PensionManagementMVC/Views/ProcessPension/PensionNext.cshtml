@model PensionManagementMVC.Models.BankDetails
    <head>
        <link rel="stylesheet" href="~/css/addpassword.css" />
    </head>

    <div class="container" style="margin-top:250px">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="card" style="padding:20px">
                    <form asp-action="PensionNext">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="BankType" class="control-label"></label>
                            @*<input asp-for="BankType" class="form-control" />*@
                            @Html.DropDownListFor(model => model.BankType, new List<SelectListItem>
       {
               new SelectListItem() {Text = "Public Bank", Value="1"},
               new SelectListItem() {Text = "Private Bank", Value="2"},


}, "--Select Bank type --", new { @class = "form-control" })
                            <span asp-validation-for="BankType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>


