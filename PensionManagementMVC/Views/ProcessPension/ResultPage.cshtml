@model PensionManagementMVC.Models.Message

@{
    ViewData["Title"] = "ResultPage";
}

<head>
    <link rel="stylesheet" href="~/css/details.css" />
</head>

<div class="container text-center" style="margin-top:250px">
    <dl class="row">
        @if (Model.message == "You have sucessfully Got pension")
        {

            <dd class="col-sm-10">

                <h6 class="text-success">@Html.DisplayFor(model => model.message)</h6>
            </dd>
            
            <dd class="col-sm-10">
                <h3 class="text-secondary">Your Total Pension Amount Rs: @Html.DisplayFor(model => model.PensionAmount)</h3>
            </dd>
        }
        else
        {
            <dd class="col-sm-10">

                <h2 class="text-danger"> @Html.DisplayFor(model => model.message)</h2>
            </dd>
        }





    </dl>
</div>


