@model PensionManagementMVC.Models.CheckPassword

@{
    ViewData["Title"] = "CheckPassword";
}

<head>
    <link rel="stylesheet" href="~/css/addpassword.css" />
</head>
<hr />
<div class="container" style="margin-top:250px">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card bg-dark text-light" style="padding:20px">
                <form asp-action="CheckPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4"></div>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
